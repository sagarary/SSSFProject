extends layout
block content
    .container-fluid
        nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.sticky-top
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#nav-content', aria-controls='nav-content', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            a.navbar-brand(href='#') Rusher
            #nav-content.collapse.navbar-collapse.justify-content-end
                ul.navbar-nav
                li.nav-item
                    a.nav-link(href='#') Events
                li.nav-item
                    a.nav-link(href='#') Connections
                li.nav-item
                    a.nav-link(href='#') Reviews
                li.nav-item
                    a.nav-link(href='#') Logout
        #locationAddModal.modal.fade(tabindex="-1" aria-hidden="true")
            .modal-dialog(role="document")
            .modal-content
                .modal-header
                h5#locationAddMOdal.modal-title Add new Location
                .modal-body
                    form#locationAddForm
                        .form-group.row
                            label.col-4
                            .col-8
                            input#Name.form-control.here(name='name', placeholder='Name', required='required', type='text')
                        .form-group.row
                            label.col-4
                            .col-8
                            textarea#details.form-control(name='details', cols='40', rows='5', aria-describedby='detailsHelpBlock')
                            span#detailsHelpBlock.form-text.text-muted Details about the location
                        .form-group.row
                            label(for="image") Picture
                            input#picture.form-control-file(type="file")
                .modal-footer
                button.btn.btn-primary(name='submit', type='submit') Add Location
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
        #reviewAddModal.modal.fade(tabindex="-1" aria-hidden="true")
            .modal-dialog(role="document")
            .modal-content
                .modal-header
                h5#reviewAddMOdal.modal-title Add Review
                .modal-body
                    form#reviewAddForm
                        .form-group.row
                            label.col-4
                            .col-8
                            input#title.form-control.here(name='title', placeholder='Title', type='text')
                        .form-group.row
                            label.col-4
                            .col-8
                            textarea#review.form-control.here(name='review', placeholder='Review', type='text')
                .modal-footer
                    button.btn.btn-primary(name='submit', type='submit') Add Review
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
        #eventAddModal.modal.fade(tabindex="-1" aria-hidden="true")
            .modal-dialog(role="document")
            .modal-content
                .modal-header
                h5#eventAddModal.modal-title Add Event
                .modal-body
                    form
                        .form-group.row
                            label.col-4
                            .col-8
                            input#title.form-control.here(name='title', placeholder='Title', type='text')
                        .form-group.row
                            label.col-4
                            .col-8
                            textarea#description.form-control.here(name='description', placeholder='Description', type='text')
                        .form-group.row
                            .col-4
                            input#date.form-control.here(name='date', placeholder='Select Date', type='date' )
                .modal-footer
                    button.btn.btn-primary(name='submit', type='submit') Add Review
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close

        #map
        block modals
            
        
    

